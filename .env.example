# Joomla Environment Configuration
# Copy this file to .env and update with your values

# Database Configuration
DB_TYPE=mysqli
DB_HOST=localhost
DB_NAME=joomla_db
DB_USER=root
DB_PASSWORD=
DB_PREFIX=dulmg_

# Site Configuration
SITE_NAME="Joomla estudos"
SITE_URL=http://localhost/joomla
LIVE_SITE=

# Debug Settings
DEBUG=false
DEBUG_LANG=false
DEBUG_LANG_CONST=true

# Security
SECRET_KEY=your-secret-key-here
FORCE_SSL=0

# Cache Settings
CACHING=0
CACHE_HANDLER=file
CACHE_TIME=15

# Mail Configuration
MAILER=mail
MAIL_FROM=admin@yourdomain.com
FROM_NAME="Your Site Name"
SENDMAIL=/usr/sbin/sendmail
SMTP_AUTH=false
SMTP_USER=
SMTP_PASS=
SMTP_HOST=localhost
SMTP_SECURE=none
SMTP_PORT=25

# Session Configuration
LIFETIME=15
SESSION_HANDLER=database

# SEO Settings
SEF=true
SEF_REWRITE=false
SEF_SUFFIX=false
UNICODE_SLUGS=false

# Paths
LOG_PATH=./administrator/logs
TMP_PATH=./tmp

# Performance
GZIP=false
ERROR_REPORTING=default

# Metadata
META_DESC=
META_AUTHOR=true
META_VERSION=false
ROBOTS=

# Feed Settings
FEED_LIMIT=10
FEED_EMAIL=none

# Timezone
OFFSET=UTC